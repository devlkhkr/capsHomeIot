                .box_radius.pt_60.pb_54
                    .subtit_fs_45.mb_80 밝기 설정
                    .range_type_04
                        .wrapper_range(id="range1")
                            input(type="hidden" value="50")

                .box_radius.pt_60.pb_54
                    .subtit_fs_45.mb_80 색온도설정
                    .range_type_05
                        .wrapper_range(id="range2")
                            input(type="hidden" value="0")
                

script.

    //- S : range
    $('#range1 input').jRange({
        from: 0,
        to: 100,
        step: 1,
        scale: [0, 100],
        format: '%s',
        width: $("#range1").width(),
        showLabels: false,
        snap: true
    });

    $('#range2 input').jRange({
        from: 0,
        to: 100,
        step: 1,
        scale: ["3000K", "6000K"],
        format: '%s',
        width: $("#range1").width(),
        showLabels: false,
        snap: true,
        onstatechange: function () {
            var tempValue = this.getValue();
            $(this.pointers[1]).css("background-position", "center left " + tempValue + "%");
        }
    });
